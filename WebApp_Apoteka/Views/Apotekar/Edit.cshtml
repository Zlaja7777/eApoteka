@using Apoteka.ViewModel;
@using Apoteka.Models
@{
    ViewData["Title"] = "DodajForma";
    Layout = null;
    var apotekar = (Apotekar)ViewData["apotekarKey"];
    var opstine = (List<OpstinaView>)ViewData["opstinaKey"];

}




<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Uredi lijek</title>
    <style>
        .forma {
            max-width: 50%;
            background: #FAFAFA;
            padding: 30px;
            margin: 50px auto;
            box-shadow: 1px 1px 25px rgba(0, 0, 0, 0.35);
            border-radius: 10px;
            border: 6px solid #2b731e;
        }

            .forma input {
                margin-bottom: 20px;
                width: 100%;
                padding: 10px;
                font-family: Calibri;
                font-size: medium;
            }
            select {
            margin-bottom: 20px;
            width: 100%;
            padding: 10px;
            font-family: Calibri;
            font-size: medium;
            margin-bottom: 20px;
                width: 100%;
                padding: 10px;
                font-family: Calibri;
                font-size: medium;
        }
            .buttonNazad{
            font: bold 11px Arial;
              text-decoration: none;
              background-color: #EEEEEE;
              color: #333333;
              padding: 2px 6px 2px 6px;
              border-top: 1px solid #CCCCCC;
              border-right: 1px solid #333333;
              border-bottom: 1px solid #333333;
              border-left: 1px solid #CCCCCC;
              background-color:#7a7a7a; 
              color: #FAFAFA;
              margin-bottom: 20px;
                width: 100%;
                padding: 10px;
                font-family: Calibri;
                font-size: medium;
            text-decoration:none;
        }
        .buttonNazad:hover{
            text-decoration:none;
            color:white;
        }
    </style>
</head>
<body>
    <form action="/Apotekar/SnimiEdit" method="post" class="forma">
        <input type="text" name="ApotekarID" value="@apotekar.ID" style="display:none" />
        <input type="text" name="ImeA" value="@apotekar.Ime" /><br />
        <input type="text" name="PrezimeA" value="@apotekar.Prezime" /><br />
        <input type="text" name="JMBGA" value="@apotekar.JMBG" /><br />
        <a style="color:#2b731e; font-family: Calibri; font-size: medium">
            Datum rođenja
        </a>
        <input type="date" name="DatumRodjenjaA" value="@apotekar.DatumRodjenja.ToLocalTime()" /><br />
        <select name="OpstinaID">
            @foreach (var o in opstine)
            {
                @if (o.ID == apotekar.MjestoRodjenjaID)
                {
                    <option value="@o.ID" selected>@o.Naziv</option>
                }
                else
                {
                    <option value="@o.ID">@o.Naziv</option>
                }
            }
        </select><br />
        <a style="color:#2b731e; font-family: Calibri; font-size: medium">
            Datum dodavanja u promet
        </a>
        <input type="date" name="DatumZaposlenjaA" value="@apotekar.DatumZaposlenja.ToLocalTime()" /><br /><br />
        <input type="submit" value="Spasi izmjene" style="background-color:#2b731e; color: #FAFAFA " />
        <a class="buttonNazad " href="/Apotekar/PrikazForma">Nazad</a>
    </form>






</body>
</html>
