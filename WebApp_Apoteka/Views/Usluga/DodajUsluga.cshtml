@using WebApp_Apoteka.ViewModels;

<!DOCTYPE html>
@{
    Layout = null;

}
@model AddUslugaViewM

<html>
<head>
    <meta charset="utf-8" />
    <title>Dodaj uslugu</title>
    <style>
        .forma {
            max-width: 50%;
            background: #FAFAFA;
            padding: 30px;
            margin: 50px auto;
            box-shadow: 1px 1px 25px rgba(0, 0, 0, 0.35);
            border-radius: 10px;
            border: 6px solid #2b731e;
        }

        .forma input {
                margin-bottom: 20px;
                width: 100%;
                padding: 10px;
                font-family: Calibri;
                font-size: medium;
            }
    </style>
</head>
<body>
    
    <form asp-action="PohraniUslugu" method="post" class="forma">
     @if (Model.ID == 0)
     {
         <input asp-for="ID" hidden/>
        <input asp-for="Naziv" placeholder="Naziv usluge" />

        <a style="color:#2b731e; font-family: Calibri; font-size: medium">
            Datum izvrsavanja usluge
        </a>
        <input type="datetime" asp-for="DatumVrijeme" />

        <input asp-for="Napomena" placeholder="Napomena" />


        <input asp-for="BrojPacijenata" placeholder="Broj pacijenata" />

        <br />
        <br />
        <input type="submit" value="Dodaj uslugu" style="background-color:#2b731e; color: #FAFAFA " />
     }
     else
     {
         <input asp-for="ID" hidden/>
        <input asp-for="Naziv" value=@Model.Naziv />

        <a style="color:#2b731e; font-family: Calibri; font-size: medium">
            Datum izvrsavanja usluge
        </a>
        <input type="datetime" asp-for="DatumVrijeme" />

        <input asp-for="Napomena" value=@Model.Napomena />


        <input asp-for="BrojPacijenata" value=@Model.BrojPacijenata />

        <br />
        <br />
        <input type="submit" value="Uredi uslugu" style="background-color:#2b731e; color: #FAFAFA " />
     }

    </form>

</body>
</html>
