@{
    Layout = null;
   
}
@using WebApp_Apoteka.ViewModels;
@model RezervacijaTerminaView

<!DOCTYPE html>s

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PrikaziLijekove</title>
   <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

</head>
<body>
    <table class="table table-bordered" style="background-color: #2b731e; color: white; box-shadow: 1px 1px 25px rgba(0, 0, 0, 0.35);
           border-radius: 10px;
           border: 6px solid #2b731e; text-align: center">

        <tr>
            
            <th>Ime i prezime</th>
            <th>Usluga </th>
            <th>Datum rezervacije</th>
            <th>Modifikacija podataka</th>
        </tr>

        @foreach (var l in Model.podaci)
        {
    <tr style="background-color: #FAFAFA; color:#2b731e; text-align: center">
       
        <td>@l.ImePrezime</td>
        <td>@l.NazivUsluge</td>
        <td>@l.DatumRezervacije</td>
        
       <td>
           <a href="/Usluga/ObrisiRezervaciju?id=@l.UslugaID&id2=@l.KorisnikID" style="text-decoration: none; height: 15px; background-color: #2b731e; color:white;
                border-radius: 10px;  border: 6px solid #2b731e;  text-align: center">Brisi</a>
       </td>
    </tr>
        
        }
    </table>
</body>
</html>