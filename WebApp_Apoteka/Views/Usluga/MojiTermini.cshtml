@inject SignInManager<AppUser> signInManager
@{
    Layout = "DefaultLayout";

}
@using WebApp_Apoteka.ViewModels;
@model UslugaView

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PrikaziLijekove</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <style>
        tr, td,th{
            border: 1px solid;
        }
    </style>
</head>
<body>
    <br /><br />
   
    

        <a href="/Usluga/PrikaziUsluge" class="btn btn-secondary" style="float: left">Nazad</a>

    <br />
    <br />
    <table class="table table-striped" style="background-color: #2b731e; color: white;

           text-align: center">

        <tr>

            <th>Naziv usluge</th>
            <th>Datum održavanja usluge </th>
            <th>Napomena</th>
          
           
                <th>Otkaži</th>

        </tr>

        @foreach (var l in Model.podaci)
        {
            <tr style="background-color: #FAFAFA; color:#2b731e; text-align: center">

                <td>@l.Naziv</td>
                <td>@l.DatumVrijeme</td>
                <td>@l.Napomena</td>
                
                <td>



                    <a href="/Usluga/ObrisiRezervaciju?id=@l.ID&korisnik=@l.korisnikID" class="btn btn-danger">Otkaži</a>

                </td>
            </tr>
        }
    </table>
</body>
</html>