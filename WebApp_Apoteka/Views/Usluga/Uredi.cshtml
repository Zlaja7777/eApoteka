


@{
    Layout = null;
    var usluga = (Usluga)@TempData["kljucUsluge"];
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Uredi lijek</title>
    <style>
        .forma {
            max-width: 50%;
            background: #FAFAFA;
            padding: 30px;
            margin: 50px auto;
            box-shadow: 1px 1px 25px rgba(0, 0, 0, 0.35);
            border-radius: 10px;
            border: 6px solid #2b731e;
        }

            .forma input {
                margin-bottom: 20px;
                width: 100%;
                padding: 10px;
                font-family: Calibri;
                font-size: medium;
            }
    </style>
</head>
<body>
    <form action="/Usluga/UredjivanjeUsluge?id=@usluga.ID" method="post" class="forma">

        <input type="text" name="NNaziv" value="@usluga.Naziv" />


        <a style="color:#2b731e; font-family: Calibri; font-size: medium">
            Datum izmjene usluge
        </a>
        <input type="datetime-local" name="NDatumVrijeme" />


        <input type="text" name="NNapomena"  value="@usluga.Napomena" />


        <input type="text" name="NBrojPacijenata"  value="@usluga.BrojPacijenata" />

        
        <br />
        <br />

        

        <input type="submit" value="Spasi izmjene" style="background-color:#2b731e; color: #FAFAFA " />
    </form>
</body>
</html>

