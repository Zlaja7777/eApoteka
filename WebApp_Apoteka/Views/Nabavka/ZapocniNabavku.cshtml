@{ 
    Layout = null;
    double ukupno = 0;
}
@model AddNabavkaViewM
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Usluga</title>
    <style>

        #form {
            max-width: 30%;
            background: #FAFAFA;
            padding: 10px;
            margin: 10px auto;
            box-shadow: 1px 1px 25px rgba(0, 0, 0, 0.35);
            border-radius: 10px;
            border: 6px solid #2b731e;
        }

        h5 {
            font-family: Calibri;
            margin-top: -10px;
            color: #2b731e;
        }

        h4 {
            font-family: Calibri;
            margin-bottom: -5px;
            font-size: 20px;
        }

        hr {
            border-color: #2b731e;
        }
       

    </style>

</head>
<body>

    <form asp-action="DodajNabavku" method="post" id="form">
        <input asp-for="ID" hidden />

        <h4>@Model.nazivLijeka</h4>
        <hr>
        <h5>Naziv lijeka</h5>

        <h4>@Model.nabavnaCijena</h4>
        <hr>
        <h5>Nabavna cijena</h5>

        <input name="kolicina" type="number" style=" margin-bottom: 10px; width: 50%;
                 padding: 10px;
                    font-family: Calibri; font-size: 20px" />
        <h5>Unesite kolicinu</h5>

        <input asp-for="vrijednostNarudzbe" value="@Model.nabavnaCijena * "/>
     


        <br />
    </form>
  


</body>
</html>
