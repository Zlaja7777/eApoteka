
@{
    Layout = "DefaultLayout";
    bool postoji = (bool)ViewData["postoji"];
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Nabavka</title>
    <style>
        .forma a{
            text-decoration: none;
            background-color: #2b731e;
            color: white;
            font-family: Calibri;
            border-radius: 10px;
            border: 6px solid #2b731e;
            text-align: center;
            padding: 10px 40px;
        }

        .forma {
            max-width: 50%;
            padding: 30px;
            margin: 50px auto;
            box-shadow: 1px 1px 25px rgba(0, 0, 0, 0.35);
            border-radius: 10px;
            border: 6px solid #2b731e;
        }

        h3 {
            max-width: 50%;
            font-family: Calibri;
            margin: 30px auto;
            color: #2b731e
        }
    </style>
</head>
<body>
   
    <div class= "forma">
    
        <a href="/Lijek/DodajLijek" class="btn btn-success">Naruči novi lijek</a>
        <br /> <br /> <br />
        <a href="/Nabavka/PrikaziStanje" class="btn btn-success">Pregledaj količinu aktivnih lijekova</a>
        <br /> <br /> <br />

        @if (postoji)
        {
            <a href="/Nabavka/ListaNarucenihLijekova" class="btn btn-success">Pregled nabavki</a>
        }

    </div>
</body>
</html>
